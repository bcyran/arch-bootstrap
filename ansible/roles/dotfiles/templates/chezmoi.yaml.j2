diff:
  pager: delta
merge:
  command: nvim
  args: ["-d", "{% raw %}{{ .Destination }}{% endraw %}", "{% raw %}{{ .Source }}{% endraw %}", "{% raw %}{{ .Target }}{% endraw %}"]

data:
  user:
    email: "{{ user.email }}"
  machine:
    id: "{{ host.id }}"
    network:
      wlan: "{{ host.network.wlan }}"
      eth: "{{ host.network.eth }}"
      dock: "{{ host.network.dock }}"
    displays:
      - description: "California Institute of Technology 0x1402"
        output: "eDP-1"
        resolution: "2880x1800"
        position: "0x325"
        scale: "1.5"
        transform: 0
      - description: "Dell Inc. DELL P2421D FJWHGC3"
        output: "DP-6"
        resolution: "2560x1440"
        position: "1920x325"
        scale: "1.0"
        transform: 0
      - description: "Dell Inc. DELL P2421D CGSHL93"
        output: "DP-7"
        resolution: "2560x1440"
        position: "4480x0"
        scale: "1.0"
        transform: 3
  settings:
    gui: {{ settings.gui | default(true, true) }}
    timewall: {{ settings.timewall | default(false, true) }}
    autolock:
      enable: {{ settings.screenlock.enable | default(false, true) }}
      time: {{ settings.screenlock.time | default(30, true) }}
    autoblank:
      enable: {{ settings.screenlock.enable | default(true, true) }}
      time: {{ settings.screenlock.time | default(10, true) }}
    dirs:
      code: "/home/{{ user.name }}/Kod"
      screenshots: "/home/{{ user.name }}/Obrazy/Zrzuty ekranu"
      wallpapers: "/home/{{ user.name }}/Obrazy/Tapety"
    theme:
      bg: "#1e222a"
      fg: "#abb2bf"
      lightbg: "#373b43"
      accent1: "#98c379"
      accent2: "#61afef"
      accent3: "#e5c07b"
      accent4: "#e06c75"
